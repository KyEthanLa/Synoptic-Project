extends layout 
block content
  doctype html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Gov
    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap' rel='stylesheet')
    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&family=Lugrasimo&family=Satisfy&display=swap' rel='stylesheet')
    link(rel='stylesheet' href='stylesheets/index.css')
    <script src="https://kit.fontawesome.com/770f9451ab.js" crossorigin="anonymous"></script>
  body
    header
      h2.logo Gov
      nav.navigation
        if !loggedIn
          a(href='/') Login
          a(href='/register') Register
    main.login-main
      .form-container-login
        .form-box
          form(action='#' method='POST')
            if error 
              p.incorrect-username-password(style="color: red; border: 2px solid red; text-align: center; border-radius: 10px; background-color: beige; padding: 5px;") Incorrect Email or Password.
            h2 Login
            .input-box
              input#email(type='email' name='email' placeholder='Email' required='')
            .input-box
              input#password(type='password' name='password' placeholder='Password' required='')
            button.login-btn(type='submit' value='Login') Login