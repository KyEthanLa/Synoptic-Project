block content
    doctype html
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, initial-scale=1.0')
        link(rel='preconnect' href='https://fonts.googleapis.com')
        link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
        link(href='https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap' rel='stylesheet')
        link(rel='stylesheet' href='/stylesheets/home.css')
        script(src='/javascripts/homescript.js' defer='')
        title Document

    header
      h2.logo Gov
      nav.navigation
        if !loggedIn
          a(href='/') Login
          a(href='/register') Register
        if isAdmin 
          a(href='/') Status
        if loggedIn 
          a(href='/weather') Weather Alert
          a(href='/job') Job Alert
          a(href='/villager') Villager Database
          a(href='/accountSettings') ( #{user} )
    main
        p Welcome, #{user}
        #container
            .item
                each val in jobs
                    .user-container
                        p= val.name  
                        p= val.contact
                        div
                            button.delete(type='submit' onclick='openDeletePopup()') Details
                            #delete-popup.delete-popup
                                button.close(type='button' onclick='closeDeletePopup()') CLOSE
            .item2
                .card
                    .search
                        input.search-bar(type='text' placeholder='Search')
                        button
                            svg(stroke='currentColor' fill='currentColor' stroke-width='0' viewbox='0 0 1024 1024' height='1.5em' width='1.5em' xmlns='http://www.w3.org/2000/svg')
                                path(d='M909.6 854.5L649.9 594.8C690.2 542.7 712 479 712 412c0-80.2-31.3-155.4-87.9-212.1-56.6-56.7-132-87.9-212.1-87.9s-155.5 31.3-212.1 87.9C143.2 256.5 112 331.8 112 412c0 80.1 31.3 155.5 87.9 212.1C256.5 680.8 331.8 712 412 712c67 0 130.6-21.8 182.7-62l259.7 259.6a8.2 8.2 0 0 0 11.6 0l43.6-43.5a8.2 8.2 0 0 0 0-11.6zM570.4 570.4C528 612.7 471.8 636 412 636s-116-23.3-158.4-65.6C211.3 528 188 471.8 188 412s23.3-116.1 65.6-158.4C296 211.3 352.2 188 412 188s116.1 23.2 158.4 65.6S636 352.2 636 412s-23.3 116.1-65.6 158.4z')
                    .weather.loading
                        h2.city Cambodia Today
                        h1.temp 51&deg;C
                        .flex
                            img.icon(src='https://openweathermap.org/img/wn/04n.png' alt='')
                            .description Cloudy
                        .feels-like Feels Like: 60%
                        .temp-min Min Temp: 60%
                        .temp-max Max: 60%%
                        .pressure Pressure: 60%%
                        .humidity Humidity: 60%
                        .sea-level Sea Level: 60%
                        .grnd-level Ground Level: 60%
                        .wind Wind speed: 6.2 km/h
                .card2
                    .day
                        .friday-title sdfsdf
                        .friday-icon ICON
                    .day
                        .saturday-title sdfsdf
                        .saturday-icon ICON
                    .day
                        .sunday-title sdfsdf
                        .sunday-icon ICON
                    .day
                        .monday-title sdfsdf
                        .monday-icon ICON
